{
  "name": "configuration-manager-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for secure configuration and secrets management",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "configuration-manager-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "configuration",
    "secrets",
    "keychain",
    "environment",
    "validation"
  ],
  "author": "Workspace Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "keytar": "^7.9.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.11",
    "@types/diff": "^5.0.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
