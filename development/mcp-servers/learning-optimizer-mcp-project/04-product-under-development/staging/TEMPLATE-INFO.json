{
  "templateType": "mcp-server",
  "templateVersion": "1.0.0",
  "name": "learning-optimizer",
  "displayName": "Learning Optimizer MCP Server",
  "description": "Domain-agnostic troubleshooting optimization system that learns from issues, prevents technical debt, and generates preventive checks across any iterative process",
  "category": "automation",
  "tags": ["learning", "optimization", "troubleshooting", "automation", "self-improving", "knowledge-base"],
  "author": "Medical Practice Workspace",
  "license": "MIT",
  "created": "2025-10-18",
  "installation": {
    "templateStoragePath": "Templates-for-tools-frameworks-mcp-servers/mcp-server-templates/templates/learning-optimizer-mcp-server-template",
    "workingInstancePath": "local-instances/mcp-servers/learning-optimizer-mcp-server",
    "requiresNodeModules": true,
    "requiresBuild": true,
    "buildCommand": "npm run build",
    "buildOutputDir": "dist"
  },
  "mcpConfiguration": {
    "required": true,
    "serverName": "learning-optimizer",
    "command": "node",
    "entryPoint": "dist/server.js",
    "env": {
      "LEARNING_OPTIMIZER_PROJECT_ROOT": "${workspaceFolder}",
      "LEARNING_OPTIMIZER_CONFIG_DIR": "${workspaceFolder}/learning-optimizer-configs"
    }
  },
  "prerequisites": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "tools": ["git"]
  },
  "features": [
    "Track issues across any domain with frequency counting",
    "Auto-detect duplicates by symptom similarity",
    "Smart categorization using configurable keyword matching",
    "Automatic promotion of high-frequency issues to preventive checks",
    "Technical debt prevention through intelligent optimization",
    "Prevention success rate tracking",
    "Domain-agnostic configuration system",
    "Multiple domain support in single server instance",
    "Markdown-based knowledge base management",
    "Cross-domain pattern recognition"
  ],
  "useCases": [
    "MCP server installation troubleshooting",
    "Google Sheets automation issue tracking",
    "Version control conflict prevention",
    "Organization planning optimization",
    "Build system failure learning",
    "Deployment pipeline improvement",
    "Test failure pattern recognition",
    "Any iterative process with recurring issues"
  ],
  "tools": [
    "track_issue",
    "check_optimization_triggers",
    "optimize_knowledge_base",
    "get_domain_stats",
    "list_domains",
    "add_domain",
    "categorize_issue",
    "detect_duplicates",
    "promote_to_preventive",
    "get_prevention_metrics"
  ]
}
