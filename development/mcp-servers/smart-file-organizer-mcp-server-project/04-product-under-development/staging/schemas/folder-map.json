{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Comprehensive folder structure map with deep understanding of folder purposes",

  "folderTypes": {
    "active-work": {
      "path": "active-work",
      "purpose": "Current work in progress - active development",
      "lifecycle": "active",
      "acceptsFiles": ["code", "documentation", "config", "data", "temp"],
      "structure": "task-based",
      "subfolderPattern": "<task-name>",
      "rules": [
        "Each active task gets its own subfolder",
        "Use kebab-case for task folder names",
        "Move to projects/ when stable, or archived/ when complete"
      ],
      "indicators": [
        "Files being actively edited",
        "Incomplete features",
        "Work-in-progress documentation",
        "Experimental code"
      ],
      "autoArchiveAfterDays": 90
    },

    "projects": {
      "path": "projects",
      "purpose": "Completed/stable projects that are actively maintained",
      "lifecycle": "stable",
      "acceptsFiles": ["code", "documentation", "config", "data"],
      "structure": "project-based",
      "subfolderPattern": "<project-name>",
      "requiredSubfolders": ["src", "docs"],
      "optionalSubfolders": ["tests", "config", "data", "scripts"],
      "rules": [
        "Each project has clear boundaries and purpose",
        "Must have README.md in project root",
        "Should have proper folder structure (src/, docs/, etc.)",
        "Active but not currently being developed"
      ],
      "indicators": [
        "Complete, working codebase",
        "Comprehensive documentation",
        "Stable API/interface",
        "Used by other projects or in production"
      ],
      "graduationFrom": "active-work"
    },

    "projects-in-development": {
      "path": "projects-in-development",
      "purpose": "Projects that are being actively developed but not yet stable",
      "lifecycle": "development",
      "acceptsFiles": ["code", "documentation", "config", "data", "planning"],
      "structure": "project-based",
      "subfolderPattern": "<project-name>",
      "rules": [
        "Projects that have outgrown active-work but aren't stable yet",
        "May have incomplete features",
        "Active development happening",
        "Move to projects/ when stable"
      ],
      "indicators": [
        "Larger than a single task",
        "Multiple related features",
        "Ongoing development",
        "Partial documentation"
      ],
      "graduationFrom": "active-work",
      "graduationTo": "projects"
    },

    "Templates-for-tools-frameworks-mcp-servers": {
      "path": "Templates-for-tools-frameworks-mcp-servers",
      "purpose": "Reusable templates for tools, frameworks, and MCP servers",
      "lifecycle": "stable",
      "acceptsFiles": ["code", "documentation", "config"],
      "structure": "category-based",
      "subfolders": {
        "frameworks": {
          "purpose": "Reusable frameworks and libraries",
          "acceptsFiles": ["code", "documentation", "examples"],
          "rules": [
            "Code that can be reused across multiple projects",
            "Well-documented with examples",
            "Stable, tested implementations"
          ]
        },
        "tools": {
          "purpose": "Reusable tools and utilities",
          "acceptsFiles": ["code", "documentation", "scripts"],
          "subfolders": {
            "mcp-servers": {
              "purpose": "MCP server implementations",
              "acceptsFiles": ["code", "documentation", "config"]
            }
          }
        }
      },
      "rules": [
        "Only stable, reusable code",
        "Must be well-documented",
        "Should have clear API/interface"
      ],
      "indicators": [
        "Used by multiple projects",
        "Generic/configurable implementation",
        "Comprehensive documentation",
        "Stable interface"
      ]
    },

    "reference": {
      "path": "reference",
      "purpose": "Static reference material, templates, and documentation",
      "lifecycle": "static",
      "acceptsFiles": ["documentation", "templates"],
      "structure": "category-based",
      "subfolders": {
        "templates": {
          "purpose": "Document and code templates",
          "acceptsFiles": ["templates", "documentation"]
        },
        "docs": {
          "purpose": "Reference documentation",
          "acceptsFiles": ["documentation"]
        }
      },
      "rules": [
        "Static material that doesn't change often",
        "Not actively worked on",
        "Used as reference for other work"
      ],
      "indicators": [
        "Template files",
        "Reference documentation",
        "Style guides",
        "Best practices documents"
      ]
    },

    "future-ideas": {
      "path": "future-ideas",
      "purpose": "Future project ideas, planning, and brainstorming",
      "lifecycle": "planning",
      "acceptsFiles": ["documentation", "planning"],
      "structure": "idea-based",
      "rules": [
        "Ideas not yet started",
        "Planning documents",
        "Brainstorming content",
        "Move to active-work when starting development"
      ],
      "indicators": [
        "Contains 'idea', 'plan', 'future' in name",
        "Brainstorming notes",
        "Project proposals",
        "Feature wishlists"
      ],
      "graduationTo": "active-work"
    },

    "planning-and-roadmap": {
      "path": "planning-and-roadmap",
      "purpose": "Strategic planning, roadmaps, and organizational goals",
      "lifecycle": "planning",
      "acceptsFiles": ["documentation", "planning"],
      "structure": "topic-based",
      "rules": [
        "High-level strategic planning",
        "Roadmaps and timelines",
        "Goal documents",
        "Organizational planning",
        "More structured than future-ideas"
      ],
      "indicators": [
        "GOAL_ prefix files",
        "ROADMAP_ prefix files",
        "PLAN_ prefix files",
        "Strategic planning content"
      ]
    },

    "live-practice-management-system": {
      "path": "live-practice-management-system",
      "purpose": "Production medical practice management system",
      "lifecycle": "stable",
      "acceptsFiles": ["code", "documentation", "config", "data"],
      "structure": "layered-architecture",
      "subfolders": {
        "1-Infrastructure Layer": {
          "purpose": "Core infrastructure components"
        },
        "2-Application Layer (Google Sheets)": {
          "purpose": "Google Sheets application layer and version control"
        },
        "3-Integration Layer": {
          "purpose": "Integration components"
        },
        "4-Monitoring Layer": {
          "purpose": "System monitoring and observability"
        }
      },
      "rules": [
        "Production system - handle with care",
        "Well-documented and maintained",
        "Has layered architecture",
        "Version controlled via GitHub"
      ],
      "indicators": [
        "Production code",
        "Medical practice workflows",
        "Google Sheets integration",
        "Layered system architecture"
      ]
    },

    "templates-and-patterns": {
      "path": "templates-and-patterns",
      "purpose": "Reusable templates, patterns, and code snippets",
      "lifecycle": "static",
      "acceptsFiles": ["code", "documentation", "templates"],
      "structure": "category-based",
      "rules": [
        "Reusable templates and patterns",
        "Well-documented examples",
        "Can be copied for new projects",
        "Generic and configurable"
      ],
      "indicators": [
        "Template files",
        "Code patterns",
        "Boilerplate code",
        "Reusable components"
      ]
    },

    "local-instances": {
      "path": "local-instances",
      "purpose": "Local tool instances (MCP servers, frameworks, utilities)",
      "lifecycle": "stable",
      "acceptsFiles": ["code", "config"],
      "structure": "tool-based",
      "subfolders": {
        "mcp-servers": {
          "purpose": "Local MCP server implementations",
          "acceptsFiles": ["code", "config", "documentation"]
        }
      },
      "rules": [
        "Local installations of tools",
        "MCP servers",
        "Framework instances",
        "Not for distribution - workspace-specific"
      ],
      "indicators": [
        "MCP server projects",
        "Local tool instances",
        "Workspace-specific configurations"
      ]
    },

    "configuration": {
      "path": "configuration",
      "purpose": "Configuration files for MCP servers and workspace tools",
      "lifecycle": "static",
      "acceptsFiles": ["config"],
      "structure": "server-based",
      "subfolderPattern": "<server-name>",
      "subfolders": {
        "learning-optimizer": {
          "purpose": "Learning Optimizer MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "smart-file-organizer": {
          "purpose": "Smart File Organizer MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "project-index-generator": {
          "purpose": "Project Index Generator MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "git-assistant": {
          "purpose": "Git Assistant MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "spec-driven": {
          "purpose": "Spec-Driven MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "basic-mcp-server": {
          "purpose": "Basic MCP Server configuration",
          "acceptsFiles": ["config"]
        },
        "arc-decision": {
          "purpose": "Arc Decision MCP server configuration",
          "acceptsFiles": ["config"]
        },
        "ai-planning": {
          "purpose": "Project Management MCP server configuration",
          "acceptsFiles": ["config"]
        }
      },
      "rules": [
        "All MCP server configuration files MUST be in configuration/[server-name]/",
        "Each MCP server gets its own subdirectory",
        "Use kebab-case for server folder names",
        "Non-secret configuration only",
        "Secrets should go in config/ folder instead"
      ],
      "indicators": [
        "MCP server configuration files",
        "JSON, YAML, or TOML configuration",
        "Server-specific settings",
        "Domain configuration files"
      ]
    },

    "archive": {
      "path": "archive",
      "purpose": "Old/completed work kept for reference only",
      "lifecycle": "archived",
      "acceptsFiles": ["code", "documentation", "config", "data"],
      "structure": "flat",
      "rules": [
        "Projects no longer maintained",
        "Completed work that's no longer needed",
        "Kept for reference only",
        "Flat structure (no date-based subfolders)"
      ],
      "indicators": [
        "No longer used or maintained",
        "Replaced by newer version",
        "Completed one-off tasks",
        "Deprecated projects"
      ],
      "graduationFrom": ["active-work", "projects", "projects-in-development"]
    },

    "Temp": {
      "path": "Temp",
      "purpose": "Throwaway/scratch files and temporary work products",
      "lifecycle": "temporary",
      "acceptsFiles": ["code", "documentation", "data", "temp"],
      "structure": "flat",
      "rules": [
        "Files that can be safely deleted",
        "Experimental code",
        "Downloaded files being processed",
        "Scratch work",
        "Roadmap and planning files during active work"
      ],
      "indicators": [
        "Contains 'temp', 'scratch', 'test' in name",
        "Quick experiments",
        "Downloaded files",
        "Temporary processing files",
        "Work-in-progress planning"
      ],
      "autoDeleteAfterDays": 90
    },

    "config": {
      "path": "config",
      "purpose": "Configuration files and secrets",
      "lifecycle": "static",
      "acceptsFiles": ["config", "secrets"],
      "structure": "flat",
      "rules": [
        "API credentials and tokens",
        "Environment-specific configuration",
        "Should be in .gitignore to avoid committing secrets"
      ],
      "indicators": [
        "Contains credentials",
        "API keys",
        "Environment variables",
        "Secret tokens"
      ]
    }
  },

  "fileTypes": {
    "code": {
      "extensions": [".js", ".ts", ".py", ".java", ".cpp", ".c", ".go", ".rs", ".rb", ".php", ".swift", ".kt"],
      "description": "Source code files"
    },
    "documentation": {
      "extensions": [".md", ".txt", ".doc", ".docx", ".pdf"],
      "description": "Documentation and text files"
    },
    "config": {
      "extensions": [".json", ".yaml", ".yml", ".toml", ".ini", ".env", ".config"],
      "description": "Configuration files"
    },
    "data": {
      "extensions": [".csv", ".xml", ".sql", ".db", ".sqlite"],
      "description": "Data files"
    },
    "secrets": {
      "patterns": ["*credentials*", "*token*", "*secret*", "*key*", ".env"],
      "description": "Files containing sensitive information"
    },
    "templates": {
      "patterns": ["*template*", "*-template.*", "template-*"],
      "description": "Template files"
    },
    "planning": {
      "patterns": ["*plan*", "*idea*", "*roadmap*", "*proposal*"],
      "description": "Planning and ideation documents"
    },
    "temp": {
      "patterns": ["*temp*", "*tmp*", "*scratch*", "*test*"],
      "description": "Temporary files"
    }
  },

  "lifecycleStages": {
    "planning": {
      "order": 1,
      "description": "Idea/planning stage",
      "typicalFolder": "future-ideas",
      "nextStage": "active"
    },
    "active": {
      "order": 2,
      "description": "Currently being worked on",
      "typicalFolder": "active-work",
      "nextStage": "development"
    },
    "development": {
      "order": 3,
      "description": "Active development but not stable",
      "typicalFolder": "projects-in-development",
      "nextStage": "stable"
    },
    "stable": {
      "order": 4,
      "description": "Completed and stable",
      "typicalFolder": "projects",
      "nextStage": "archived"
    },
    "static": {
      "order": 5,
      "description": "Reference material that doesn't change",
      "typicalFolder": "reference",
      "nextStage": null
    },
    "archived": {
      "order": 6,
      "description": "No longer active or maintained",
      "typicalFolder": "archived",
      "nextStage": null
    },
    "temporary": {
      "order": 0,
      "description": "Temporary files",
      "typicalFolder": "temp",
      "nextStage": null
    }
  },

  "rootFiles": {
    "allowed": [
      "package.json",
      "package-lock.json",
      "README.md",
      ".gitignore",
      ".file-organizer-rules.json",
      ".smart-file-organizer-rules.json",
      "tsconfig.json",
      ".mcp.json",
      ".env",
      "SECURITY_BEST_PRACTICES.md",
      ".DS_Store",
      ".vscode"
    ],
    "rules": [
      "Only core project files should be in root",
      "No task-specific READMEs or checklists",
      "No code files unless truly project-wide",
      "Secrets should go in /config/ folder instead"
    ]
  },

  "organizationRules": {
    "contentBased": {
      "analyzeContent": true,
      "keywords": {
        "credentials": "config",
        "api_key": "config",
        "experimental": "temp",
        "draft": "active-work",
        "template": "reference/templates",
        "documentation": "reference/docs",
        "idea": "future-ideas",
        "goal": "planning-and-roadmap",
        "roadmap": "planning-and-roadmap",
        "plan": "planning-and-roadmap",
        "discussion": "active-work or project/docs",
        "meeting notes": "active-work or project/docs",
        "specification": "project/docs",
        "design document": "project/docs",
        "implementation plan": "project/docs",
        "architecture": "project/docs",
        "guide": "reference/docs",
        "tutorial": "reference/docs",
        "reference": "reference/docs",
        "in progress": "active-work",
        "work in progress": "active-work",
        "wip": "active-work"
      }
    },
    "nameBased": {
      "patterns": {
        "GOAL_*.md": "planning-and-roadmap/",
        "ROADMAP_*.md": "planning-and-roadmap/",
        "DISCUSSION_*.md": "active-work/<task-name>/ or <project>/docs/",
        "MEETING_*.md": "active-work/<task-name>/ or <project>/docs/",
        "PLAN_*.md": "planning-and-roadmap/",
        "IDEA_*.md": "future-ideas/",
        "SPEC_*.md": "<project>/docs/",
        "DESIGN_*.md": "<project>/docs/",
        "IMPLEMENTATION_*.md": "<project>/docs/",
        "TODO_*.md": "active-work/<task-name>/",
        "CHECKLIST_*.md": "active-work/<task-name>/",
        "STATUS_*.md": "<project>/docs/ or active-work/<task-name>/",
        "SUMMARY_*.md": "<project>/docs/ or planning-and-roadmap/",
        "GUIDE_*.md": "reference/docs/",
        "TUTORIAL_*.md": "reference/docs/",
        "REFERENCE_*.md": "reference/docs/",
        "CONFIG_*.json": "config/ or <project>/",
        "CONFIG_*.yaml": "config/ or <project>/",
        "*-notes.md": "active-work/<task-name>/",
        "*-checklist.md": "active-work/<task-name>/",
        "README*.md": "context-dependent",
        "*-template.*": "reference/templates/",
        "*-draft.*": "active-work/<task-name>/",
        "test-*": "temp/",
        "*-old.*": "archived/",
        "*-backup.*": "archived/"
      }
    },
    "projectDetection": {
      "minimumFiles": 3,
      "indicators": [
        "Has package.json or similar config",
        "Has README.md",
        "Has src/ or lib/ directory",
        "Multiple related code files"
      ],
      "shouldCreateProjectFolder": true
    }
  }
}
