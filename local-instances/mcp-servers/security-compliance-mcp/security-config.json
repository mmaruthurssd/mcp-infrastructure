{
  "version": "1.0.0",
  "allowList": [],
  "preCommitHooks": {
    "enabled": true,
    "blockOnViolations": true,
    "scanCredentials": true,
    "scanPHI": true,
    "phiSensitivity": "medium"
  },
  "auditLogging": {
    "enabled": true,
    "storePath": "~/workspace-brain/telemetry/security",
    "retentionDays": 2190
  },
  "secretsManagement": {
    "enabled": true,
    "keystoreType": "macos-keychain",
    "rotationDays": 90
  }
}
