{
  "step": "planning",
  "scenario": "add-feature",
  "questions": [
    {
      "id": "technical_approach",
      "type": "text",
      "question": "How will you implement this feature?",
      "hint": "Consider existing architecture and patterns",
      "required": true,
      "variable": "TECHNICAL_APPROACH"
    },
    {
      "id": "reuse_patterns",
      "type": "text",
      "question": "What existing patterns or architectures will you follow?",
      "hint": "Reference existing specs if applicable",
      "required": true,
      "variable": "REUSE_PATTERNS"
    },
    {
      "id": "new_technologies",
      "type": "text",
      "question": "Any new technologies needed (or 'Use existing stack')?",
      "required": true,
      "variable": "NEW_TECHNOLOGIES"
    },
    {
      "id": "data_storage",
      "type": "text",
      "question": "Data storage approach (new tables, extend existing, etc.)?",
      "required": true,
      "variable": "DATA_STORAGE"
    },
    {
      "id": "api_contracts_needed",
      "type": "boolean",
      "question": "Need new API endpoints or contracts?",
      "default": false,
      "required": true,
      "variable": "API_CONTRACTS_NEEDED"
    },
    {
      "id": "implementation_phases",
      "type": "number",
      "question": "How many implementation phases?",
      "default": 2,
      "min": 1,
      "max": 6,
      "required": true,
      "variable": "IMPLEMENTATION_PHASES"
    },
    {
      "id": "testing_approach",
      "type": "text",
      "question": "Testing approach for this feature?",
      "hint": "Following established patterns from constitution",
      "required": true,
      "variable": "TESTING_APPROACH"
    },
    {
      "id": "integration_points",
      "type": "text",
      "question": "What are the integration points with existing features?",
      "required": true,
      "variable": "INTEGRATION_POINTS"
    },
    {
      "id": "deployment_strategy",
      "type": "text",
      "question": "Deployment strategy?",
      "hint": "Same as existing features or different?",
      "required": true,
      "variable": "DEPLOYMENT_STRATEGY"
    },
    {
      "id": "estimated_effort",
      "type": "text",
      "question": "Estimated implementation effort?",
      "hint": "e.g., '1 week', '3 days', '20 hours'",
      "required": false,
      "variable": "ESTIMATED_EFFORT"
    }
  ],
  "follow_up_questions": {
    "phases": {
      "question_template": "Describe phase {{number}}:",
      "fields": [
        {
          "id": "phase_name",
          "question": "Phase name:",
          "required": true
        },
        {
          "id": "phase_goal",
          "question": "Goal:",
          "required": true
        },
        {
          "id": "deliverables",
          "question": "Deliverables (separate with semicolons):",
          "required": true
        },
        {
          "id": "validation",
          "question": "Validation criteria (separate with semicolons):",
          "required": true
        }
      ]
    }
  }
}
