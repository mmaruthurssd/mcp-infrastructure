{
  "templateType": "mcp-server",
  "templateVersion": "1.0.0",
  "name": "spec-driven-mcp-server",
  "displayName": "Spec-Driven Development MCP Server",
  "description": "Interactive MCP server that guides you step-by-step through Specification-Driven Development (SDD), helping you create high-quality specifications, implementation plans, and task breakdowns for your projects.",
  "author": "SSD Medical Practice",
  "created": "2025-10-17",
  "installation": {
    "templateStoragePath": "Templates-for-tools-frameworks-mcp-servers/mcp-server-templates/templates/spec-driven-mcp-server-template",
    "workingInstancePath": "local-instances/mcp-servers/spec-driven-mcp-server",
    "requiresNodeModules": true,
    "requiresBuild": true,
    "buildCommand": "npm run build",
    "buildOutputDir": "dist"
  },
  "mcpConfiguration": {
    "required": true,
    "serverName": "spec-driven",
    "command": "node",
    "entryPoint": "dist/server.js",
    "environmentVariables": {}
  },
  "prerequisites": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "tools": ["git"]
  },
  "features": [
    "Interactive guided workflow for spec-driven development",
    "Medical practice ready with PHI/HIPAA compliance templates",
    "Auto-detection of project type and scenario",
    "Template-driven documentation generation",
    "State management for resuming workflows",
    "Multi-scenario support (new projects, existing code, feature additions)"
  ],
  "documentation": {
    "readme": "README.md",
    "installation": "INSTALL-INSTRUCTIONS.md",
    "setup": "docs/SETUP.md",
    "deployment": "docs/DEPLOYMENT.md",
    "scenarios": "docs/SCENARIOS.md"
  },
  "aiInstructions": {
    "detectionFile": "TEMPLATE-INFO.json",
    "installationGuide": "INSTALL-INSTRUCTIONS.md",
    "autoInstallScript": "install.sh",
    "configurationScript": "configure-mcp.sh"
  }
}
