{
  "name": "project-management-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AI-assisted project planning and goal workflow management (uses workflow-orchestrator-mcp-server)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --noEmitOnError false && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "watch": "tsc --watch",
    "dev": "tsc --watch & node --watch dist/server.js",
    "start": "node dist/server.js"
  },
  "keywords": [
    "mcp",
    "ai-planning",
    "goal-workflow",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/jest": "^30.0.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "uuid": "^13.0.0",
    "workflow-orchestrator-mcp-server": "file:../workflow-orchestrator-mcp-server",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "typescript": "^5.3.0"
  }
}
